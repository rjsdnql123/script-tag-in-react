{
    "compilerOptions": {
      "target": "es2015",
      "lib": ["dom", "dom.iterable", "esnext"],
      "skipLibCheck": true,
      "strict": false,
      "forceConsistentCasingInFileNames": true,
      "esModuleInterop": true,
      "module": "esnext",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "jsx": "react",
      "allowJs": true,
      "declaration": true,
      "declarationDir": "./dist",
      "outDir": "dist",
      "allowSyntheticDefaultImports": true,
      "baseUrl": ".",
      "types": ["@testing-library/jest-dom"],
    },
    "exclude": [
      "node_modules",
      "dist"
    ]
  }